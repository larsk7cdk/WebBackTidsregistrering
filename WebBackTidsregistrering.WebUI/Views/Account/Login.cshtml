@model WebBackTidsregistrering.WebUI.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<fieldset>
    <div class="offset-md-3 col-md-6">
        <h1>Login</h1>
        <br/>
    </div>

    <form asp-controller="Account" role="form" asp-action="Login" class="form-horizontal" asp-route-returnurl="@ViewData[" ReturnUrl"]">
        <div class="offset-md-3 col-md-6">
            <div class="form-group">
                <a asp-action="SetCulture" asp-route-culture="da-DK" class="btn btn-primary">
                    <span class="@(ViewBag.CurrentCulture == "da-DK" ? "font-weight-bold" : null)">DA</span>
                </a>

                <a asp-action="SetCulture" asp-route-culture="en-US" class="btn btn-primary">
                    <span class="@(ViewBag.CurrentCulture == "en-US" ? "font-weight-bold" : null)">EN</span>
                </a>
            </div>

            <div asp-validation-summary="All" class="input-validation-error"></div>

            <div class="form-group">
                <label asp-for="Email" class=""></label>
                <input type="email" asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>
            <br/>
            <div>
                <label>&nbsp;</label>
                <button type="submit" class="btn btn-success">@Localizer["ButtonLogin"]</button>
            </div>
            <br/>
            <p>

                <a asp-action="Register">@Localizer["ButtonRegister"]</a>
            </p>
        </div>
    </form>
</fieldset>